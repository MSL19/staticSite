  body
    .container-contact100
      .wrap-contact100
        form.contact100-form.validate-form
          span.contact100-form-title Contact Us
          .wrap-input100.validate-input.bg1(data-validate='Please Type Your Name')
            span.label-input100 FULL NAME *
            input.input100(type='text', name='name', placeholder='Enter Your Name')
          .wrap-input100.validate-input.bg1.rs1-wrap-input100(data-validate='Enter Your Email (e@a.x)')
            span.label-input100 Email *
            input.input100(type='text', name='email', placeholder='Enter Your Email ')
          .wrap-input100.bg1.rs1-wrap-input100
            span.label-input100 Phone
            input.input100(type='text', name='phone', placeholder='Enter Number Phone')
          .wrap-input100.input100-select.bg1
            span.label-input100 Reason For Contact
            div
              select.js-select2(name='service')
                option Please chooses
                option Early Bird Stock Price Analyis
                option Job Inquiry
                option Questions/Suggestions
              .dropDownSelect2
          .w-full.dis-none.js-show-service
            .wrap-contact100-form-radio
              span.label-input100 What type of products do you sell?
              .contact100-form-radio.m-t-15
                input.input-radio100#radio1(type='radio', name='type-product', value='physical', checked='')
                label.label-radio100(for='radio1') Phycical Products
              .contact100-form-radio
                input.input-radio100#radio2(type='radio', name='type-product', value='digital')
                label.label-radio100(for='radio2') Digital Products
              .contact100-form-radio
                input.input-radio100#radio3(type='radio', name='type-product', value='service')
                label.label-radio100(for='radio3') Services Consulting
            .wrap-contact100-form-range
              span.label-input100 Budget *
              .contact100-form-range-value
                | $
                span#value-lower 610
                | - $
                span#value-upper 980
                input(type='text', name='from-value')
                |  
                input(type='text', name='to-value')
              .contact100-form-range-bar
                #filter-bar
          .wrap-input100.validate-input.bg0.rs1-alert-validate(data-validate='Please Type Your Message')
            span.label-input100 Message
            textarea.input100(name='message', placeholder='Your message here...')
          .container-contact100-form-btn
            button.contact100-form-btn
              span
                | Submit
                i.fa.fa-long-arrow-right.m-l-7(aria-hidden='true')
    //===============================================================================================
    script(src='vendor/jquery/jquery-3.2.1.min.js')
    //===============================================================================================
    script(src='vendor/animsition/js/animsition.min.js')
    //===============================================================================================
    script(src='vendor/bootstrap/js/popper.js')
    script(src='vendor/bootstrap/js/bootstrap.min.js')
    //===============================================================================================
    script(src='vendor/select2/select2.min.js')
    script $(".js-select2").each(function(){
			$(this).select2({
				minimumResultsForSearch: 20,
				dropdownParent: $(this).next('.dropDownSelect2')
			});


			$(".js-select2").each(function(){
				$(this).on('select2:close', function (e){
					if($(this).val() == "Please chooses") {
						$('.js-show-service').slideUp();
					}
					else {
						$('.js-show-service').slideUp();
						$('.js-show-service').slideDown();
					}
				});
			});
		})
    //===============================================================================================
    script(src='vendor/daterangepicker/moment.min.js')
    script(src='vendor/daterangepicker/daterangepicker.js')
    //===============================================================================================
    script(src='vendor/countdowntime/countdowntime.js')
    //===============================================================================================
    script(src='vendor/noui/nouislider.min.js')
    script var filterBar = document.getElementById('filter-bar');

	    noUiSlider.create(filterBar, {
	        start: [ 1500, 3900 ],
	        connect: true,
	        range: {
	            'min': 1500,
	            'max': 7500
	        }
	    });

	    var skipValues = [
	    document.getElementById('value-lower'),
	    document.getElementById('value-upper')
	    ];

	    filterBar.noUiSlider.on('update', function( values, handle ) {
	        skipValues[handle].innerHTML = Math.round(values[handle]);
	        $('.contact100-form-range-value input[name="from-value"]').val($('#value-lower').html());
	        $('.contact100-form-range-value input[name="to-value"]').val($('#value-upper').html());
	    });
